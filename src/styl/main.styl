@import 'mixin'

*
  line-height 1.65
  text-rendering optimizeLegibility
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  outline none!important
  -webkit-tap-highlight-color: transparent !important

html,body
  scrollbar-width none /* Firefox */
  -ms-overflow-style none /* IE 10+ */
  ::-webkit-scrollbar
    display none /* WebKit */
    width 0px /* WebKit */
  scroll-behavior smooth
  font-family sans-serif
  height 100%
  width 100%

.container
  width: 100%
  max-width 1410px
  margin 0 auto
  height: 100%
  position: relative
  +bp(xl)
    max-width 1170px
  +bp(l)
    max-width 970px
  +bp(m)
    max-width none
    padding 0 15px
    box-sizing border-box

img
  height 100%
  width 100%
  object-fit cover

button, input, textarea
  font-family inherit
  margin 0
  padding 0
  background transparent
  border 0

span
  color inherit

a
  color inherit
  text-decoration none